
@model Relync.Models.Comment
@using (Html.BeginForm("AddComment", "Property", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Comment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <input name="Id" type="hidden" value="@ViewBag.PostId" />
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="Cmmnt">Comment</label>
            
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Cmmnt, new { htmlAttributes = new { @style = "width: 100%; height: 400px; font-size: 14px; line-height: 18px;" } })
                @Html.ValidationMessageFor(model => model.Cmmnt, "", new { @class = "text-danger" })
            </div>
        </div>

   

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add Comment" class="btn btn-default" />
            </div>
        </div>
    </div>
}

