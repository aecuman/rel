@model Relync.Models.PropertyList
  


<script>
    $(document).ready(
        function () {
           
            $('[data-show="popover"]').popover('show');
         
        }
       
        );
    $(document).on("click", function () {
        $('[data-show="popover"]').popover('hide')
    })
</script>



@{
    ViewBag.Title = "Home";

}

    <div class="jumbotron landing">
        <div style="padding:40px;">
            <p class="text-center"><h4 class="text-center reduce">A Location First Real Estate Website</h4></p>
            <div style="text-align:center;">
                <p> Select Category to view location map of properties</p>

            </div>
            <div class="tab-content text-center" style="padding: 15px;">

                <div id="tabr1" class="tab">

                    <a id="rentbutn" href="~/Property/Map?typ=RENT" data-animation="true" data-show="popover" data-placement="top" data-content="select to see map of rental properties" class="btn btn-wide input-landing " style="background-color: rgba(0, 0, 0, 0.59);border: solid 1px orange;"><i class="glyphicon glyphicon-map-marker "></i>Rent</a>
                    @*  <a href="~/Property/Map" class="icn btn btn-wide animated zoomInDown animated infinite bounce"><span class="fui fui-location"></span></a>
                    *@
                    <a id="salebutton" href="~/Property/Map?typ=SALE" data-animation="true" data-show="popover" data-placement="bottom" data-trigger="focus manual" data-offset="30" data-content="select to see map of properties for sale" class="btn btn-wide input-landing" style="background-color: rgba(0, 0, 0, 0.59);border: solid 1px orange;"><i class="glyphicon glyphicon-map-marker"></i>Sale</a>


                </div>


            </div>
        </div>
    </div>
    <div style="background-color:#FFFFFF;text-align:center;padding:24px;">
        <p>At no search fee, conveniently decide where to stay or buy with the following features</p>

    </div>


    <div class="row" style="border:solid 2px white;">
        <div class="col-md-4">
            <div class="tile animated slideInLeft">
                <img src="~/Images/Icons/map.svg" alt="Map" class="tile-image big-illustration">
                <h3 class="tile-title">Site Map</h3>
                <p>Previews Property Listings from location map</p>

            </div>
        </div>
        <div id="tile" class="col-md-4">
            <div class="tile animated slideInRight">
                <img src="~/Images/Icons/clipboard.svg" alt="Clipboard" class="tile-image big-illustration">
                <h3 class="tile-title">Professional Detailing</h3>
                <p>
                    Detailed property description by trained realtors

                </p>

            </div>
        </div>
        <div class="col-md-4">
            <div class="tile animated slideInUp">
                <img src="~/Images/Icons/vid.svg" alt="Vid" class="tile-image big-illustration">
                <h3 class="tile-title">Video Tour</h3>
                <p>Video walkthrough of all rental property</p>

            </div>
        </div>



    </div>
    <div class="row" style=" font-weight:bolder;text-align:center;max-height:110px;">
        <p class="lead">DREAM IT,&nbsp; FIND IT,&nbsp; OWN IT</p>

    </div>
    <div class="tagsinput-primary bgland lead">
        ARE YOU A LANDLORD?
        <br /><small><i>"bring your property home"</i></small>

    </div>
